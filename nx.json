{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "dev": {
      "continuous": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["{projectRoot}/src/**/*", "{projectRoot}/lib/**/*"],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "build:watch": {
      "dependsOn": ["^build"],
      "inputs": ["{projectRoot}/src/**/*", "{projectRoot}/lib/**/*"],
      "outputs": ["{projectRoot}/dist"],
      "continuous": true
    },
    "format:check": {
      "cache": true
    },
    "format": {
      "cache": true
    },
    "lint:check": {
      "cache": true
    },
    "lint": {
      "cache": true
    }
  },
  "plugins": ["./tools/ruby/src/index.ts"],
  "release": {
    "versionPlans": true,
    "changelog": {
      "projectChangelogs": {
        "renderOptions": {
          "authors": false,
          "applyUsernameToAuthors": false,
          "commitReferences": false,
          "versionTitleDate": false
        }
      }
    },
    "version": {
      "updateDependents": "never"
    },
    "projectsRelationship": "independent",
    "groups": {
      "lib": {
        "projects": [
          "@grit42/notifications",
          "@grit42/client-library",
          "@grit42/form",
          "@grit42/api",
          "@grit42/table",
          "@grit42/spreadsheet",
          "@grit42/plots"
        ]
      },
      "core": {
        "projects": ["grit-core", "@grit42/core"]
      },
      "compounds": {
        "projects": ["grit-compounds", "@grit42/compounds"]
      },
      "assays": {
        "projects": ["grit-assays", "@grit42/assays"]
      }
    }
  }
}
